<h1 class="title">Assess Risks and Needs</h1>

{{#assessments}}
    <h2>{{assessmentType}}</h2>

    <table class="summary-list">
        <caption>Assessment Summary</caption>
        <tr>
            <td>Created at</td>
            <td>{{createdAtFormatted}}</td>
        </tr>
        <tr>
            <td>Updated at</td>
            <td>{{updatedAtFormatted}}</td>
        </tr>
    </table>

    <table class="summary-list">
        <caption>Assessment Answers</caption>
        {{#answers}}
            <tr>
                <td>{{key}}</td>
                <td>
                    {{#single}}{{single}}{{/single}}
                    {{#multiple}}
                        <ul>
                            {{#multiple}}
                                <li>{{.}}</li>
                            {{/multiple}}
                        </ul>
                    {{/multiple}}
                </td>
            </tr>
        {{/answers}}

        {{#properties}}
            <tr>
                <td>{{key}}</td>
                <td>
                    {{#single}}{{single}}{{/single}}
                    {{#multiple}}
                        <ul>
                            {{#multiple}}
                                <li>{{.}}</li>
                            {{/multiple}}
                        </ul>
                    {{/multiple}}
                </td>
            </tr>
        {{/properties}}
    </table>

    {{#collections}}
        <h2>{{name}}</h2>

        {{#items}}
            <table class="summary-list">
                <caption>{{name}} {{index}}</caption>

                {{#answers}}
                    <tr>
                        <td>{{key}}</td>
                        <td>
                            {{#single}}{{single}}{{/single}}

                            {{#multiple}}
                                <ul>
                                    {{#multiple}}
                                        <li>{{.}}</li>
                                    {{/multiple}}
                                </ul>
                            {{/multiple}}
                        </td>
                    </tr>
                {{/answers}}

                {{#properties}}
                    <tr>
                        <td>{{key}}</td>
                        <td>
                            {{#single}}{{single}}{{/single}}

                            {{#multiple}}
                                <ul>
                                    {{#multiple}}
                                        <li>{{.}}</li>
                                    {{/multiple}}
                                </ul>
                            {{/multiple}}
                        </td>
                    </tr>
                {{/properties}}
            </table>

            {{#collections}}
                <h2>{{name}}</h2>

                {{#items}}
                    <table class="summary-list">
                        <caption>{{name}} {{index}}</caption>

                        {{#answers}}
                            <tr>
                                <td>{{key}}</td>
                                <td>
                                    {{#single}}{{single}}{{/single}}

                                    {{#multiple}}
                                        <ul>
                                            {{#multiple}}
                                                <li>{{.}}</li>
                                            {{/multiple}}
                                        </ul>
                                    {{/multiple}}
                                </td>
                            </tr>
                        {{/answers}}

                        {{#properties}}
                            <tr>
                                <td>{{key}}</td>
                                <td>
                                    {{#single}}{{single}}{{/single}}

                                    {{#multiple}}
                                        <ul>
                                            {{#multiple}}
                                                <li>{{.}}</li>
                                            {{/multiple}}
                                        </ul>
                                    {{/multiple}}
                                </td>
                            </tr>
                        {{/properties}}
                    </table>

                    {{#collections}}
                        <h2>{{name}}</h2>

                        {{#items}}
                            <table class="summary-list">
                                <caption>{{name}} {{index}}</caption>

                                {{#answers}}
                                    <tr>
                                        <td>{{key}}</td>
                                        <td>
                                            {{#single}}{{single}}{{/single}}

                                            {{#multiple}}
                                                <ul>
                                                    {{#multiple}}
                                                        <li>{{.}}</li>
                                                    {{/multiple}}
                                                </ul>
                                            {{/multiple}}
                                        </td>
                                    </tr>
                                {{/answers}}

                                {{#properties}}
                                    <tr>
                                        <td>{{key}}</td>
                                        <td>
                                            {{#single}}{{single}}{{/single}}

                                            {{#multiple}}
                                                <ul>
                                                    {{#multiple}}
                                                        <li>{{.}}</li>
                                                    {{/multiple}}
                                                </ul>
                                            {{/multiple}}
                                        </td>
                                    </tr>
                                {{/properties}}
                            </table>
                        {{/items}}
                    {{/collections}}
                {{/items}}
            {{/collections}}
        {{/items}}
    {{/collections}}
{{/assessments}}

{{^assessments}}
    <p>No assessments available.</p>
{{/assessments}}
